[core]
	editor = nano

[alias]
	co = checkout

[web]
	browser = google-chrome

[push]
	default = simple

[color]
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = red

[credential]
	helper = cache --timeout=28800	
